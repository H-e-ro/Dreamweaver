	<files>
		<file source="CodeColoring/PHP.xml" destination="$dreamweaver/Configuration/CodeColoring/PHP.xml" />
	</files>
	<configuration-changes>
		<extensions-changes>
			<extension-insert extension="SQL" description="SQL Script Files" />
		</extensions-changes>
		<documenttype-changes>
			<documenttype-insert>
				<documenttype file="default_sql.sql" id="SQL" internaltype="Text" macfileextension="sql" winfileextension="sql" writebyteordermark="false">
					<TITLE>
						<![CDATA[SQL]]>
					</TITLE>
					<description>
						<![CDATA[SQL Script Files]]>
					</description>
				</documenttype>
			</documenttype-insert>
		</documenttype-changes>
	</configuration-changes>
</macromedia-extension>
